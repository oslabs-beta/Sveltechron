{
  "manifest_version": 3,
  "name": "Sveltechron",
  "version": "1.0",
  "description": "Browser devtools extension for debugging Svelte applications.",
  "content_scripts": [
    {
      "world": "MAIN",
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["isolated.js"],
      "run_at": "document_start"
    }
  ],

  "devtools_page": "devtools/index.html"
}
