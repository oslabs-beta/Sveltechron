{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "extension/*.ts"
  ],
  "exclude": ["build", "node_modules", "webpack.config.js"]
}
